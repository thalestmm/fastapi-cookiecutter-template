POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:your-secure-postgres-password@postgres:5432/{{ cookiecutter.project_slug.replace('-', '_') }}
{% endif %}

{% if cookiecutter.ai_project == 'y' %}
# LLM Configuration
