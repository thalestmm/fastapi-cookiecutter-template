FROM python:{{ cookiecutter.python_version }}-slim

RUN apt-get update && apt-get install -y gcc curl && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY backend/requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt

COPY backend/ .

# TODO: Apply migrations if necessary

# Create logs directory with proper permissions
RUN mkdir -p /app/logs && chmod -R 755 /app

# Set PYTHONPATH so Python can find the app module
ENV PYTHONPATH=/app

# Default command to be overwritten in docker-compose
CMD ["sh", "-c", "uvicorn app.main:app --host 0.0.0.0 --port {{ cookiecutter.backend_port }}"]
